<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/recipe_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/recipe_text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="name"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/recipe_text_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="description"
            android:layout_below="@+id/recipe_text_name"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/recipe_text_tgt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/recipe_text_desc"
            android:text="Makes: "
            android:textSize="14sp" />

        <EditText
            android:id="@+id/recipe_text_qty_tgt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="target_qty"
            android:inputType="numberDecimal"
            android:imeOptions="actionDone"
            android:layout_below="@+id/recipe_text_tgt"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/recipe_text_desc_tgt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_below="@+id/recipe_text_tgt"
            android:layout_marginStart="8dp"
            android:layout_toRightOf="@+id/recipe_text_qty_tgt" />

        <TextView
            android:id="@+id/recipe_text_ingredient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/recipe_text_desc_tgt"
            android:text="Ingredients:"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/recipe_text_instruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/recipe_text_ingredient"
            android:text="Instructions:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/recipe_text_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/recipe_text_instruction"
            android:text="Tags:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/recipe_text_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/recipe_text_tag"
            android:text="Comments:"
            android:textSize="20sp" />

    </RelativeLayout>

</ScrollView>
