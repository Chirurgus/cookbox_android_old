<?xml version="1.0" encoding="utf-8"?>
<!-- Layout to display the recipe_toolbar in the recipe_toolbar list -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/select_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tag_selection_list_item_text1"
        android:layout_marginStart="5sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tag_selection_list_item_text2"
        android:layout_marginTop="2sp"
        android:layout_marginStart="5sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tag_selection_list_item_text1"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:id="@+id/tag_selection_list_item_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10sp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true" />

</RelativeLayout>